<nav class="navbar navbar-inverse" id="header">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to t("layouts.park_booking"), root_url, class: "navbar-brand" %>
    </div>
    <ul class="nav navbar-nav">
      <li class="active">
        <%= link_to t("layouts.home_page"), root_url %>
      </li>
      <% if current_user && current_user.parking.present? %>
        <li class="dropdown" style="margin-right: 12px">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Bộ sưu tập <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Bãi đỗ của tôi", user_parking_path(current_user,
              current_user.parking) %></li>
            <li><%= link_to "Danh sách khách hàng", parking_orders_path(current_user.parking) %></li>
          </ul>
        </li>
      <% end %>
    </ul>

    <% if user_signed_in? %>
      <ul class="nav navbar-right">
        <li class="dropdown" style="float: right">
          <a href="#" class="dropdown-toggle text-muted" data-toggle="dropdown">
            <%= image_tag("4.png", class: "user_img") %>
            <%= current_user.name %> <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <% if current_user.role_id == 2 %>
              <li><%= link_to "Trang admin", rails_admin_path %></li>
            <% end %>
            <li><%= link_to t("layouts.profile_page"), current_user %></li>
            <li><%= link_to t("layouts.logout"), destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
      </ul>
      <% if current_user.parking.nil? %>
        <ul class="nav navbar-nav navbar-right"
          style="margin-top: 8px; margin-right: 10px">
          <%= link_to new_user_parking_path(current_user),
            class: "btn btn-primary" do %>
            <span class="glyphicon glyphicon-plus"></span>
            Tạo bãi đỗ
          <% end %>
        </ul>
      <% end %>
    <% else %>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to new_user_session_path do %>
            <span class="glyphicon glyphicon-log-in login_tag">
            </span><%= t "sessions.login" %>
          <% end %>
        </li>
      </ul>
    <% end %>
    <%= form_tag parkings_path, method: :get,
      class: "navbar-form search-form", id: "livesearch_parking_form" do %>
      <div class="form-group dropdown">
        <%= text_field_tag :search, params[:search],
          class: "form-control dropdown-toggle",
          placeholder: "Search parkings...",
          "data-toggle": "dropdown", "aria-hidden": :true,
          autocomplete: :off, required: true, id: "livesearch_parking_input" %>
        <ul class="dropdown-menu">
          <div id="livesearch_parking_dom"></div>
          <div id="livesearch_parking_loading"></div>
        </ul>
      </div>
      <%= button_tag type: :submit, class: "btn btn-default" do %>
        <i class="fa fa-search"></i>
      <% end %>
    <% end %>
  </div>
</nav>
