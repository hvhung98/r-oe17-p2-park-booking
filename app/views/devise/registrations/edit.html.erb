<div id="edit-user" class="mainbox col-md-8 col-md-offset-2
  col-sm-8 col-sm-offset-2">
  <div class="panel panel-success">
    <div class="panel-heading">
      <div class="panel-title">Chỉnh sửa thông tin cá nhân</div>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.label :name, "Họ và tên" %>
        <%= f.text_field :name, class: "form-control" %><br>
        <%= f.label :email, "Email" %>
        <%= f.email_field :email, class: "form-control" %><br>
        <%= f.label :phone_number, "Số điện thoại" %>
        <%= f.text_field :phone_number, class: "form-control" %><br>
        <%= f.label :password, "Mật khẩu" %> <i>(để trống nếu bạn không muốn thay
          đổi nó)</i>
        <%= f.password_field :password, class: "form-control" %>
        <% if @minimum_password_length %>
          <em>Ít nhất <%= @minimum_password_length %> kí tự mật khẩu</em>
        <% end %><br><br>
        <%= f.label :password_confirmation, "Xác nhận mật khẩu" %>
        <%= f.password_field :password_confirmation, class: "form-control" %><br>
        <%= f.label :current_password, "Mật khẩu hiện tại" %><i>(Xác nhận sự thay
          đổi của bạn)</i><br>
        <%= f.password_field :current_password, class: "form-control" %><br><br>
        <%= f.submit "Xác nhận", class: "btn btn-primary" %>
        <%= link_to "Huỷ bỏ", root_url, class: "btn btn-warning", style: "margin-left: 3%; padding-left: 15px; padding-right: 15px" %>
      <% end %>
    </div>
  </div>
</div>
