<%= form_for @place do |f| %>
  <%= f.text_field :latitude, class: "form-control", id: "latitude" %>
  <%= f.text_field :longitude, class: "form-control", id: "longitude" %>
  <%= f.submit "Tìm bãi đỗ quanh đây", class: "btn btn-info" %>
<% end %>

<script>
  $(document).ready(function() {
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(showPosition);
    } else {
      console.log("Định vị địa lý không được hỗ trợ bởi trình duyệt này");
    }
  })

  function showPosition(position) {
    $("#latitude").val(position.coords.latitude);
    $("#longitude").val(position.coords.longitude);
  }
</script>
