<h3>Sửa đánh giá</h3>
<%= form_for [@parking, @review] do |f| %>
  <div id="rating-form">
    <%= f.label :rating, "Đánh giá (*) " %>
  </div>
  <%= f.label :comment, "Bình luận" %>
  <%= f.text_field :comment, class: "form-control" %><br>
  <%= f.submit "Xác nhận", class: "btn btn-primary" %>
<% end %>

<script>
  $("#rating-form").raty({
    path: "/assets/",
    scoreName: "review[rating]"
  });
</script>
